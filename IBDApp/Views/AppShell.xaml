<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IBDApp.Views"
    x:Class="IBDApp.Views.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Title="IBDApp">
    <TabBar>
        <Tab Title="Overview">
            <ShellContent
                Title="Overview"
                ContentTemplate="{DataTemplate local:OverviewPage}"                
                Route="Overview" />
        </Tab>
        <Tab Title="Details">
            <ShellContent
                Title="Details"
                ContentTemplate="{DataTemplate local:DetailsPage}"
                Route="Details" />
        </Tab>
    </TabBar>

</Shell>
